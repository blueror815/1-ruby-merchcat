<% content_for :head do %>
  <title>Contact Merch Cat</title>
<% end %>
<%= render 'home/header' %>

<div id="contact">
  <div class="container">
  <div class="row">
      <div id="contact-form" class="col-md-6 col-xs-11">
        <h2>Contact Us</h2>
        <%= form_tag '' do %>
          <%= text_field_tag :name, nil, placeholder: 'Name' %><br /><br />
          <%= email_field_tag :email, nil, placeholder: 'Email' %><br /><br />
          <%= text_area_tag :message, nil, placeholder: 'Message', cols: 60, rows: 10 %><br /><br />
          <%= submit_tag('Submit', id: 'contact_submit', class: 'btn btn-lg btn-transparent') %>
        <% end %>

        <div id="auth_form_message_container" class="message_container">
          <span id="auth_form_message_spinner"></span>
          <span id="auth_form_message"></span>
        </div>

      </div>
      </div>
  </div>

  <!-- /container -->
</div>
<!-- /terms -->

<div id="contact-lower" class="">
<%= render 'home/footer' %>
</div>