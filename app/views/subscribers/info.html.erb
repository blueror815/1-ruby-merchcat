<div class="wrapper wrapper-content animated fadeInRight">    
    <% if @subscribers && @subscribers.length  %>
        <div class="row">
            <div class="col-lg-12 show-table">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Subscribers</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="subscriber-table footable table table-stripped" data-page-size="20" data-filter=#filter>
                            <thead style="width:100%">
                                <tr>
                                    <th style="width:20%">Artist Name</th>
                                    <th style="width:30%">Email</th>
                                    <th style="width:30%">Expiration</th>
                                    <th style="width:20%">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% (1..@subscribers.length).each do |i| %>
                                    
                                    <tr class="gradeA">

                                        <%  @subscriber = @subscribers[i-1] %>
                                        
                                        <td class="center">
                                            <%= @subscriber['artist_name'] %>    
                                        </td>

                                        <td class="center">
                                            <%= @subscriber['email']  %>
                                        </td>

                                        <td class="center">
                                            <%= 
                                                if @subscriber['expires_on']
                                                    Time.parse(@subscriber['expires_on']).strftime("%m/%d/%y %l:%M %p")  
                                                end 
                                            %>
                                        </td>
                                        
                                        <td class="center">
                                            <%= @subscriber['status'] %>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                            <tfoot>
                                <tr>
                                  <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                  </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    <% end %>

    <script type="text/javascript">

        $(function() {

            $('.footable').footable();
            var newDate = $('.product-imitation').val();
            console.log(newDate);

        });

    </script>

</div>